<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@drawable/background_main"
>


    <TextView android:id="@+id/textNumber6"
              android:layout_width="wrap_content"
              android:text="0"
              android:layout_height="wrap_content"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              android:textSize="24sp"
              android:fontFamily="@font/cambay"
              android:textColor="@color/white"
              android:layout_marginTop="120dp"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="16dp"
              app:layout_constraintStart_toEndOf="@+id/textNumber5"
              android:layout_marginStart="40dp"/>

    <TextView android:id="@+id/textNumber5"
              android:layout_width="wrap_content"
              android:text="0"
              android:layout_height="wrap_content"
              app:layout_constraintTop_toTopOf="parent"
              android:textSize="24sp"
              android:fontFamily="@font/cambay"
              android:textColor="@color/white"
              android:layout_marginTop="120dp"
              app:layout_constraintStart_toEndOf="@+id/textNumber4"
              app:layout_constraintEnd_toStartOf="@+id/textNumber6"
              android:layout_marginStart="40dp"/>

    <TextView android:id="@+id/textNumber4"
              android:layout_width="wrap_content"
              android:text="0"
              android:layout_height="wrap_content"
              app:layout_constraintTop_toTopOf="parent"
              android:textSize="24sp"
              android:textColor="@color/white"
              android:fontFamily="@font/cambay"
              android:layout_marginTop="120dp"
              app:layout_constraintStart_toEndOf="@+id/textNumber3" android:layout_marginStart="40dp"
              app:layout_constraintEnd_toStartOf="@+id/textNumber5"/>

    <TextView android:id="@+id/textNumber3"
              android:layout_width="wrap_content"
              android:text="0"
              android:layout_height="wrap_content"
              app:layout_constraintTop_toTopOf="parent"
              android:textSize="24sp"
              android:textColor="@color/white"
              android:fontFamily="@font/cambay"
              android:layout_marginTop="120dp"
              app:layout_constraintEnd_toStartOf="@+id/textNumber4"
              app:layout_constraintStart_toEndOf="@+id/textNumber2" android:layout_marginStart="40dp"/>

    <TextView android:id="@+id/textNumber2"
              android:layout_width="wrap_content"
              android:text="0"
              android:layout_height="wrap_content"
              android:textSize="24sp"
              android:textColor="@color/white"
              android:fontFamily="@font/cambay"
              android:layout_marginTop="120dp"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintStart_toEndOf="@+id/textNumber" android:layout_marginStart="40dp"
              app:layout_constraintEnd_toStartOf="@+id/textNumber3"/>

    <TextView android:id="@+id/textNumber"
              android:layout_width="wrap_content"
              android:text="0"
              android:layout_height="wrap_content"
              android:textSize="24sp"
              android:fontFamily="@font/cambay"
              app:layout_constraintTop_toTopOf="parent"
              android:layout_marginTop="120dp"
              android:textColor="@color/white"
              tools:ignore="MissingConstraints"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginStart="16dp"
              app:layout_constraintEnd_toStartOf="@+id/textNumber2"/>

    <Button android:id="@+id/buttonRandom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gerar"
            android:layout_marginBottom="40dp"
            style="@style/ButtonStyle"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:fontFamily="@font/cambay"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textSize="18sp"/>

</android.support.constraint.ConstraintLayout>